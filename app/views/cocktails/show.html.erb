

<h1><%= @cocktail.name %></h1>

  <ul>
    <% @cocktail.doses.each do |dose| %>
    <li><%= dose.description %></li>
    <li><%= dose.ingredient.name %></li>
    <li><%= link_to "Delete dose", dose_path(dose),
      method: :delete,
      data: { confirm: "Are you sure?" },
      class: "btn btn-danger home-link" %></li>
  </ul>
<% end %>

  <%= cl_image_tag @cocktail.photo, width: 400, height: 300, crop: :fill %>


<%= link_to "Add dose and ingredient", new_cocktail_dose_path(@cocktail), class: "btn btn-primary home-link"%>
<%= link_to "Back to list", cocktails_path, class: "btn btn-primary home-link" %>


